@model Product


<h1 style="text-align:center">Create Product</h1>

<div class="container">

    <form method="post" asp-controller="Product" asp-action="CreateProduct">
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input readonly="readonly" asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Company"></label>
            <input readonly="readonly" asp-for="Company" class="form-control" placeholder="Company">
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input readonly="readonly" asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" asp-controller="Product"  asp-route-id="@Model.ProductId" asp-action="DeleteProduct"  class="btn btn-success">Update</button>
        <button type="submit" asp-controller="Product" asp-action="GetAllProduct" class="btn btn-danger">Cancel</button>

    </form>


</div>

