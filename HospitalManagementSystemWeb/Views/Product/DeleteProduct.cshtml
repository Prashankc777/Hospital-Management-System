@model Product

<h1>Employee Details</h1>

<div class="container">

    <form asp-controller="Product" asp-action="DeleteProduct" method="post" class="mt-3">

      
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input readonly="readonly" asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Company"></label>
            <input readonly="readonly" asp-for="Company" class="form-control" placeholder="Company">
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input readonly="readonly" asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" asp-controller="Product" asp-action="DeleteProduct"  asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</button>
        <button type="submit" asp-controller="Product" asp-action="GetAllProduct" class="btn btn-success">Cancel</button>




    </form>
</div>