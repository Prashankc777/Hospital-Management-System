@model Product

<h1 style="text-align:center">Edit Product</h1>


<div class="container">
    
    <form asp-controller="Product" asp-action="EditProduct" method="post" class="mt-3">
        
        
        <input type="hidden" asp-for="ProductId"/>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Company"></label>
            <input asp-for="Company" class="form-control" placeholder="Company">
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" asp-controller="Product" asp-action="EditProduct" class="btn btn-success">Update</button>
        <button type="submit" asp-controller="Product" asp-action="GetAllProduct" class="btn btn-danger">Cancel</button>




    </form>
    
    

</div>